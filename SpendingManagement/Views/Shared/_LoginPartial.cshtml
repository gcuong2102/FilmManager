@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="dropdown">
        <a id="dropdownUser" class="btn my-2 my-sm-0 nav_search-btn nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa fa-user" aria-hidden="true"></i>
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownUser">
            <li><p>@User.Identity.GetUserName()</p></li>
            <li><hr class="horizontal dark my-1" style="padding:0px;margin:0"></li>
            <li><a class="dropdown-item" href="/admin">Tài khoản</a></li>
            <li><a class="dropdown-item" href="/home">Quản lý website</a></li>
            <li>
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                @Html.AntiForgeryToken()
                    <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a>
                }
            </li>
        </ul>
    </div>
}
else
{
    <div class="dropdown">
        <a id="dropdownUser" class="btn my-2 my-sm-0 nav_search-btn nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa fa-user" aria-hidden="true"></i>
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownUser">
            <li>@Html.ActionLink("Đăng ký", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class= "dropdown-item" })</li>
            <li>@Html.ActionLink("Đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class= "dropdown-item" })</li>
        </ul>
    </div>
}

